<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:MoneyPlan.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="MoneyPlan.Views.CreateMoneyGoalWindow"
        Title="MoneyGoalWindow"
        x:DataType="viewModels:CreateMoneyGoalViewModel">
        <StackPanel>
                <TextBox Text="{Binding NewGoalTitle}"/>
                
                <TextBox Text="{Binding NewGoalAmount}"/>

                <Button Content="Add new goal" Command="{Binding AddNewGoalCommand}"/>
        </StackPanel>
</Window>
